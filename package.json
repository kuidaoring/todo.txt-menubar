{
  "name": "todo.txt-menubar",
  "description": "todo.txt mac menubar app",
  "author": {
    "name": "Yuji Sato",
    "url": "https://github.com/kuidaoring"
  },
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuidaoring/todo.txt-menubar.git"
  },
  "private": true,
  "main": "build/electron/electron.js",
  "homepage": "./",
  "dependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/gutter": "^0.19.9",
    "@codemirror/highlight": "^0.19.7",
    "@codemirror/history": "^0.19.2",
    "@codemirror/language": "^0.19.7",
    "@codemirror/state": "^0.19.6",
    "@codemirror/view": "^0.19.42",
    "@lezer/lr": "^0.15.8",
    "@replit/codemirror-vim": "^0.19.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "cm6-theme-solarized-dark": "^0.1.0",
    "cm6-theme-solarized-light": "^0.1.0",
    "date-fns": "^2.28.0",
    "electron-store": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "lezer-generator": "lezer-generator",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build:mac": "npm run build && tsc -p electron && electron-builder --mac --x64 --dir"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@lezer/generator": "^0.15.4",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.3",
    "electron-builder": "^22.14.13",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.0"
  },
  "build": {
    "productName": "todo.txt-menubar",
    "appId": "com.gihub.kuidaoring.todotxt-menubar",
    "artifactName": "${productName}-${version}.${ext}",
    "extends": null,
    "files": [
      "build/**/*",
      "asset/*"
    ],
    "mac": {
      "publish": {
        "provider": "github"
      }
    }
  }
}
